#include <iostream>
using namespace std;
int hanoi(int n, char source, char helper, char dest) {
    if (n == 0) return 0;
    int moves = 0;
    moves += hanoi(n-1, source, dest, helper);
    moves += 1; 
    moves += hanoi(n-1, helper, source, dest);
    return moves;
}
int main() {
    int n;
    cin >> n;
    cout << hanoi(n, 'A', 'B', 'C') << endl; 
    return 0;
}
